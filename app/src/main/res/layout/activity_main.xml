<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#2B2B2B"
    tools:context=".MainActivity">

    <!-- Tekst z poziomem baterii -->
    <TextView
        android:id="@+id/tvBattery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bateria: --%"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginBottom="16dp" />

    <!-- Obrazek (tu np. ikona wilka / podgląd glyph) -->
    <ImageView
        android:id="@+id/ivWolf"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="#000000"
        android:layout_marginBottom="24dp" />

    <!-- Przycisk wysyłający wzór na Glyph -->
    <Button
        android:id="@+id/btnSendGlyph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WYŚLIJ NA GLYPH"
        android:textAllCaps="false"
        android:layout_marginBottom="12dp" />

    <!-- Przycisk diagnostyczny -->
    <Button
        android:id="@+id/btnDiag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diagnozuj SDK"
        android:textAllCaps="false" />

</LinearLayout>
